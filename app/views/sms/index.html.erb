<h1>Sms#index</h1>
<p>Find me in app/views/sms/index.html.erb</p>

<%= form_tag :controller => 'sms', :action => 'send_sms' do %>
  <div class="form-border" style="width:700px;">
    <div class="form-title">Send SMS</div>
    <%= flash[:notice] %>

    <div class="field">
      <div class="field_label">To Phone Number:</div>
      <div class="field_input"><%= text_field_tag :to_phone, params[:to_phone], :size => 20, :require => true %></div>
    </div>

    <div class="field">
      <div class="field_label">Message Body:</div>
      <div class="field_input"><%= text_field_tag :body, params[:body], :size => 160, :require => true %></div></div>
    </div>

    <div class="submit-button">
      <%= submit_tag 'Send_SMS', :class => 'button button-blue', :id => 'send_sms_btn' %>
    </div>
  </div>
<% end %>

